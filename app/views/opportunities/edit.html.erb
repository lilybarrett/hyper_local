<div class="page-background">

  <div class="row">
    <div class="small-12 small-centered medium-6 medium-centered columns form">

      <div id="organization-profile">
        <h1 class="opportunity-h1">Change Opportunity Info</h1>
        <%= form_for @opportunity do |f| %>

          <div class="field">
            <%= f.label :description, "Description" %>
            <%= f.text_field :description %>
          </div>

          <div class="field">
            <%= f.label :capacity, "Capacity" %>
            <%= f.number_field :capacity %>
          </div>

          <div class="field">
            <%= f.label :street, "Street Address" %>
            <%= f.text_field :street %>
          </div>

          <div class="field">
            <%= f.label :city, "City" %>
            <%= f.text_field :city %>
          </div>

          <div class="field">
            <%= f.label :state, "State" %>
            <%= f.text_field :state %>
          </div>

          <div class="field">
            <%= f.label :date, "Date" %>
            <%= f.date_field :date %>
          </div>

          <div class="field">
            <%= f.label :start_time, "Starts At:" %>
            <%= f.time_field :start_time %>
          </div>

          <div class="field">
            <%= f.label :end_time, "Ends At:" %>
            <%= f.time_field :end_time %>
          </div>

          <div class="actions">
            <%= f.submit "Update", class: "button round submit" %>
          </div>
        <% end %>

        </div>
      </div>
    </div>
  </div>
