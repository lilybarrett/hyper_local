<div class="page-background">

  <div class="row">
    <div class="small-6 small-centered columns form">

      <div id="organization-profile">
        <h1>Register Your Organization</h1>
        <%= form_for @organization do |f| %>
          <div class="field">
            <%= f.label :name, "Organization Name" %>
            <%= f.text_field :name %>
          </div>

          <div class="field">
            <%= f.label :description %>
            <%= f.text_field :description %>
          </div>

          <div class="field">
            <%= f.label :street, "Street Address" %>
            <%= f.text_field :street %>
          </div>

          <div class="field">
            <%= f.label :city %>
            <%= f.text_field :city %>
          </div>

          <div class="field">
            <%= f.label :state %>
            <%= f.text_field :state %>
          </div>

          <div class="field">
            <%= f.label :cause, "What's Your Cause?" %>
            <%= f.select :cause, ["Technology and Privacy", "Healthcare Access", "Disability Advocacy"] %>
          </div>

          <div class="actions">
            <%= f.submit "Register", class: "button round" %>
          </div>
        <% end %>

        </div>
      </div>

    </div>
